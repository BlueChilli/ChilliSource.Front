{
	"name": "chillifront",
	"version": "0.1.2",
	"description": "Bluechilli's React Redux module system",
	"main": "./lib/index.js",
	"module": "es/index.js",
	"jsnext:main": "es/index.js",
	"license": "MIT",
	"prettier": {
		"printWidth": 100,
		"noSemi": true,
		"trailingComma": "es5",
		"jsxBracketSameLine": true,
		"rcVerbose": true,
		"useTabs": true,
		"tabWidth": 2,
		"singleQuote": true
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.3",
		"babel-eslint": "^8.2.6",
		"babel-loader": "^7.1.5",
		"babel-plugin-external-helpers": "^6.22.0",
		"babel-preset-env": "^1.7.0",
		"babel-preset-react": "^6.24.1",
		"babel-preset-stage-2": "^6.24.1",
		"eslint": "^5.1.0",
		"eslint-plugin-import": "^2.13.0",
		"eslint-plugin-react": "^7.10.0",
		"jest": "^23.4.1",
		"rimraf": "^2.6.2"
	},
	"peerDependencies": {
		"lodash": "^4.17.10",
		"object.map": "^1.0.1",
		"react": "^16.0.0-0",
		"react-redux": "^5.0.7",
		"react-router": "^4.3.0",
		"react-router-config": "^1.0.0-beta.4",
		"react-router-dom": "^4.3.0",
		"react-router-redux": "^5.0.0-alpha.9",
		"redux": "^4.0.0",
		"redux-devtools-extension": "^2.13.5"
	},
	"scripts": {
		"start": "cross-env BABEL_ENV=commonjs babel src --out-dir lib --watch",
		"build": "npm run build:commonjs && npm run build:es",
		"build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
		"build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
		"test": "jest",
		"lint": "eslint src",
		"clean": "rimraf lib es"
	},
	"dependencies": {
		"connected-react-router": "^4.4.1",
		"lodash": "^4.17.10",
		"object.map": "^1.0.1",
		"react": "^16.4.0",
		"react-redux": "^5.0.7",
		"react-router-config": "^1.0.0-beta.4",
		"react-router-dom": "^4.3.0",
		"react-router-redux": "^5.0.0-alpha.9",
		"redux": "^4.0.0",
		"redux-devtools-extension": "^2.13.5"
	}
}
